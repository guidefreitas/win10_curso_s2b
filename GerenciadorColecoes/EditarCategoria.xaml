<Page
    x:Class="GerenciadorColecoes.EditarCategoria"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GerenciadorColecoes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar IsSticky="True" x:Name="appBar" Background="{StaticResource BackgroundColor}">
            <CommandBar.PrimaryCommands>
                <AppBarButton Foreground="{StaticResource ForegroundColor}" Name="btSalvar" Click="btSalvar_Click" Icon="Save" IsCompact="False" Label="Salvar"/>
                <AppBarButton Foreground="{StaticResource ForegroundColor}" Name="btApagar" Click="btApagar_Click" Icon="Delete" IsCompact="False" Label="Apagar"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.TopAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20, 20, 20, 20">
            <TextBlock Text="Categoria" Style="{StaticResource TitleTextBlockStyle}" Margin="0, 0, 0, 20"/>
            <TextBox FontSize="25" Name="tbNome" PlaceholderText="Informe o nome da categoria"/>
        </StackPanel>
    </Grid>
</Page>
